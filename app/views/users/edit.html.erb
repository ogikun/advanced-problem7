<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :postcode, 'Postal code' %><br />
        <%= f.text_field :postcode, autocomplete: 'postcode', class: 'form-control postcode' %>
      </div>
      <div class="form-group">
        <%= f.label :prefecture_code, 'Prefecture code' %><br />
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name,{prompt: true}, {class: "form-control prefecture"} %>
      </div>
      <div class="form-group">
        <%= f.label :address_city, 'City' %><br />
        <%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control city' %>
      </div>
      <div class="form-group">
        <%= f.label :address_street, 'Street' %><br />
        <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control street' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
